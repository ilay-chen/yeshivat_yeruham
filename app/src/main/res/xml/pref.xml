    <android.support.v7.preference.Preference
        android:title="רשימת נוכחות"
        android:key="attendanceList"
        android:summary="רשימת הנרשמים לשבתות ישיבה"/>

    <android.support.v7.preference.Preference
        android:title="נוכחות"
        android:key="attendance"
        android:summary="הרשמות לשבתות ישיבה"/>

    <android.support.v7.preference.Preference
        android:title="עדכן תמונה"
        android:key="update_pic"
        android:summary="עדכן את תמונת הפרופיל שלך"/>

    <android.support.v7.preference.Preference
        android:title="דווח על תקלה"
        android:key="bug_report"
        android:summary="נתקלת בבעיה? יש לך רעיון גאוני? נשמח לשמוע..."/>

    <android.support.v7.preference.Preference
        android:title="רענן קבצים"
        android:key="refresh_files"
        android:summary="רענן קבצי מערכת"/>

    <android.support.v7.preference.Preference
        android:title="התנתק"
        android:key="sign_out"
        android:summary=""/>

    <android.support.v7.preference.Preference
        android:title="שליחת הודעות"
        android:key="send_msgs"
        android:summary="שליחת הודעות לתמידי הישיבה"/>



</android.support.v7.preference.PreferenceScreen>
