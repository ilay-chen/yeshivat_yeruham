<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_play_lesson"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/play_lesson_right_margin"
    android:paddingTop="8dp"
    android:layoutDirection="rtl"
    tools:context="com.flower.yeshivatyeruham.PlayLessonDialog">

    <Button
        android:text="מחק"
        style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/song_name"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:id="@+id/delete" />

    <Button
        android:text="שתף"
        style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/delete"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/play"
        android:id="@+id/share" />

    <Button
        android:id="@+id/play"
        style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/share"
        android:text="פתח"/>

    <TextView
        android:text="בחר פעולה לביצוע"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/song_name"
        android:layout_marginRight="8dp"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />
</RelativeLayout>
